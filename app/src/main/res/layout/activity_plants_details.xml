<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E4B2"
    tools:context=".plantsDetails">



    <TextView
        android:id="@+id/textplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="85dp"
        android:fontFamily="sans-serif"
        android:text="Peacey Lily"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_marginTop="138dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/raduies_corner_top"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginLeft="11dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="About The Plant"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discPlant"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="It's one of the most popular houseplants, and for good reason: This attractive, shade-loving specimen makes an elegant, aromatic addition to your houseplant collection.  "
            android:textColor="#616161"
            android:textSize="17dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:elevation="0dp"
            android:translationZ="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingTop="9dp"
                android:paddingLeft="88dp"
                android:layout_marginTop="7dp"
                android:textColor="#292727"
                android:textStyle="bold"
                android:text="Watering" />
            <TextView
                android:id="@+id/water"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="40dp"
                android:textColor="#616161"
                android:textStyle="bold"
                android:text="125 ml of water" />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:src="@drawable/water"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:elevation="0dp"
            android:translationZ="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:paddingLeft="88dp"
                android:layout_marginTop="7dp"
                android:textColor="#292727"
                android:textStyle="bold"
                android:text="Sunlight" />
            <TextView
                android:id="@+id/sun"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="88dp"

                android:layout_marginTop="40dp"
                android:textColor="#616161"
                android:textStyle="bold"
                android:text="125 ml of water" />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_width="67dp"
                android:layout_height="73dp"
                android:src="@drawable/sun"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:elevation="0dp"
            android:translationZ="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:paddingLeft="88dp"
                android:layout_marginTop="7dp"
                android:textColor="#292727"
                android:textStyle="bold"
                android:text="Fertilizer"/>
            <TextView
                android:id="@+id/fertiz"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="40dp"
                android:textColor="#616161"
                android:textStyle="bold"
                android:text="125 ml of water" />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_width="67dp"
                android:layout_height="73dp"
                android:src="@drawable/fertz"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:id="@+id/DateBtn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Click to set Water reminder" />

            <TextView
                android:id="@+id/WaterPage"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Click to see all the Reminders you've added"
                android:textColor="#7A8E5E"
                android:textSize="14dp" />

        </LinearLayout>




    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    </LinearLayout></ScrollView>
    <ImageView
        android:id="@+id/image_Plant"
        android:layout_width="320dp"
        android:layout_height="229dp"
        android:layout_marginLeft="189dp"
        android:layout_marginBottom="122dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/plant" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="11dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="32dp"
            android:layout_marginTop="2dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_24" />
    </LinearLayout>

</RelativeLayout>

