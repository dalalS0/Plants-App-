<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Reset your password"
        android:textColor="#474747"
        android:textSize="18dp"
        android:layout_marginBottom="19dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:background="@drawable/shapedit"
        android:elevation="3dp"
        android:hint="Email"
        android:layout_marginTop="9dp"
        android:padding="13dp" />


    <Button
        android:id="@+id/reset"
        android:text="Send"
        android:textSize="18dp"
        android:textColor="#292929"
        android:elevation="12dp"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#C8E4B2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="15dp"
        android:layout_width="316dp"
        android:layout_height="55dp"/>
        <TextView
            android:id="@+id/msgReset"
            android:layout_width="302dp"
            android:text="Please check your email for reset your password"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#81B2B8"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/msgResetWrong"
            android:layout_width="302dp"
            android:text=" Failed to Send, The email is wrong"
            android:textSize="14dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#DCD52619"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/msgFill"
            android:layout_width="302dp"
            android:text="Fill the email"
            android:textSize="14dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#DCD52619"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/proBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:scaleX=".5"
            android:progressTint="#889A66"
            android:scaleY=".5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>