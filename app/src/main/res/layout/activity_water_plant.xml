<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WaterPlant">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/arrowBack2"
            android:layout_width="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Your Watering schedule"
            android:layout_marginTop="10dp"
            android:textColor="#6F931E"
            android:textStyle="bold"
          />
        <TextView
            android:id="@+id/noWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="there's no Watering schedule"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:textColor="#777875"
            />

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recPlantDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="22dp"

            /></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>